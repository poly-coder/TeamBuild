@inherits TbButton

<TbButton ButtonType="@ButtonType"
          Color="@(Color ?? TbColor.Default)"
          Disabled="@Disabled"
          EndIcon="@EndIcon"
          FullWidth="@FullWidth"
          Href="@Href"
          IconColor="@IconColor"
          Loading="@Loading"
          LoadingContent="@LoadingContent"
          Rel="@Rel"
          Size="@Size"
          StartIcon="@(StartIcon ?? TbIcon.Cancel)"
          Target="@Target"
          Variant="@Variant"
          OnClick="@OnClick">
    @if (ChildContent is not null)
    {
        @ChildContent
    }
    else{
        <text>Cancel</text>
    }
</TbButton>
