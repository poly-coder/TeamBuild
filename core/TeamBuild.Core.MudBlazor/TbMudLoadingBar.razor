@using global::MudBlazor

<MudPaper Height="4" Elevation="0">
    @if (IsLoading)
    {
        <MudProgressLinear Color="@Color"
                           Indeterminate="true" />
    }
</MudPaper>

@code
{
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Primary;
}
