@using TeamBuild.Projects.Domain.CultureFeature

<TbMudLoadingBar IsLoading="IsLoading" />

@if (LoadException is not null)
{
    <TbMudExceptionAlert Exception="LoadException" />
}

<TbMudFieldValues FieldValues="@FieldValues()" IsLoading="@IsLoading" />

@code
{
    [Parameter]
    public bool IsLoading { get; set; }

    [Parameter]
    public Exception? LoadException { get; set; }

    [Parameter]
    public CultureDetails? Culture { get; set; }

    private IEnumerable<FieldValue> FieldValues()
    {
        yield return new FieldValue("Code", Culture?.CultureCode);
        yield return new FieldValue("English", Culture?.EnglishName);
        yield return new FieldValue("Native", Culture?.NativeName);
    }
}
