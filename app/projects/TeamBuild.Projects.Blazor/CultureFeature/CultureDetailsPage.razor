@attribute [Route(CultureRoutes.DetailsRoute)]

@if (CultureId is null)
{
    return;
}

<TbPageComponent Title="Culture Details" Breadcrumbs="@Breadcrumbs">
    <ChildContent>Hello world</ChildContent>

    <BottomBar>
        <TbEditButton Href="@CultureRoutes.Edit(CultureId)" />
        <TbDeleteButton Href="@CultureRoutes.Delete(CultureId)" />
    </BottomBar>
</TbPageComponent>

@code
{
    [Parameter]
    public string? CultureId { get; set; }

    private IReadOnlyCollection<TbBreadcrumbItem> Breadcrumbs => [
        TbBreadcrumbItem.Create("Cultures", CultureRoutes.List(), TbIcon.List),
        TbBreadcrumbItem.Current("Culture Details", TbIcon.View)
    ];
}
